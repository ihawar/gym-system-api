generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  COACH
  MEMBER
}

model User {
  id       Int    @id @default(autoincrement())
  phone    String @unique
  password String

  avatarUrl String?
  bio       String?
  firstName String
  lastName  String
  birthDate DateTime?
  heightCm  Float?
  weight    Float?

  role            Role   @default(MEMBER)
  // owned plans & accessible plans
  writtenPlans    Plan[] @relation("WrittenPlans")
  accessiblePlans Plan[] @relation("PlanAccess")

  workouts WorkoutLog[]

  blocked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Plan {
  id              Int    @id @default(autoincrement())
  title           String
  // writer and members
  writer          User   @relation("WrittenPlans", fields: [writerId], references: [id], onDelete: Cascade)
  writerId        Int
  usersWithAccess User[] @relation("PlanAccess")

  planExercises PlanExercise[]
  workouts      WorkoutLog[]

  createdAt DateTime @default(now())

  @@index([writerId])
}

model Exercise {
  id          Int     @id @default(autoincrement())
  coverUrl    String?
  guideUrl    String?
  name        String
  description String?
  repeats     Int     @default(1)

  planExercises PlanExercise[]
}

model PlanExercise {
  planId Int
  moveId Int
  order  Int     @default(0)
  sets   Int?
  note   String?

  plan     Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [moveId], references: [id], onDelete: Restrict)

  @@id([planId, moveId])
  @@index([planId, moveId])
}

model WorkoutLog {
  id     Int   @id @default(autoincrement())
  user   User  @relation(fields: [userId], references: [id])
  userId Int
  plan   Plan? @relation(fields: [planId], references: [id])
  planId Int?

  startedAt  DateTime
  finishedAt DateTime?

  @@index([userId, startedAt, planId])
}
